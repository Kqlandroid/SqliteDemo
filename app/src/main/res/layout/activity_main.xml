<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demos.tags.ui.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_addTabler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建数据库"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_addcontet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加表数据"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_updatecontet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改表数据"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_deletecontet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除表数据"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_selectcontet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询表数据"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_addcontetApi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加表数据Api"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_updatecontetApi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改表数据Api"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_deletecontetApi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除表数据Api"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_selectcontetApi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询表数据"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号码归属地查询"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_RecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看多种布局"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SimpleCursorAdapter适配器加载数据库"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_listView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CurstorAdapter适配器加载数据库"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_insertmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批量插入"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据库数据分页"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
            <TextView
                android:id="@+id/tv_videoplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频开发"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#d2216d"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_oschina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="开源中国"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/tv_blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="博客"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/tv_cehua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="多种布局"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/tv_recylview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="左滑右滑"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"/>


    </LinearLayout>
</LinearLayout>
